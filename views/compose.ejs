<%- include partials\header -%>
<h1>Compose</h1>



<form action="/compose" method="POST" class="item">
    <div class="mb-3">
      <label  class="form-label">Title</label>
      <input  type="text"  name="postTitle" style="width: 100% " placeholder="Subject" autocomplete="off" class="form-control">
    
    </div>
    <div class="mb-3">
      <label  class="form-label">Post</label>
      <!-- <input type="text"  name="postBody" style="width: 75%; height: 150px" autocomplete="off" class="form-control"> -->
      <textarea type="text"  name="postBody" rows="5" cols="30" autocomplete="off" class="form-control"></textarea>

    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>



